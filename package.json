{
  "name": "diagrammable",
  "version": "0.1.0",
  "author": "Elusive Development",
  "description": "User interface for creation of diagrams using MermaidJs.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elusive/diagrammable.git"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "install-app-deps",
    "dev": "concurrently -k \"npm start\" \"npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "appId": "com.electron.diagrammable",
    "productName": "Diagrammable",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": [
        "msi"
      ]
    },
    "nsis": {
      "oneClick": "true",
      "perMachine": "false"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "electron-is-dev": "1.2.0",
    "codemirror": "^5.58.2",
    "framer-motion": "^2.9.4",
    "js-base64": "^3.7.2",
    "mermaid": "^8.13.10",
    "moment": "^2.29.1",
    "react": "17.0.2",
    "react-codemirror2-react-17": "1.0.0",
    "react-dom": "17.0.2",
    "react-router-dom": "^5.2.0",
    "react-swipeable-views": "^0.13.8",
    "web-vitals": "^0.2.4",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@monaco-editor/react": "^4.4.5",
    "@mui/icons-material": "^5.0.4",
    "@mui/material": "^5.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react-scripts": "4.0.0",
    "styled-components": "^5.2.0",
    "@trendmicro/react-sidenav": "^0.5.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "css-spring": "^4.1.0",
    "electron": "9.1.1",
    "electron-builder": "^22.14.5",
    "wait-on": "5.1.0"
  }
}
