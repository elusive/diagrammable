{
  "name": "diagrammable",
  "version": "1.0.1",
  "author": "Elusive Development",
  "description": "User interface for creation of diagrams using MermaidJs.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elusive/diagrammable.git"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "postinstall": "install-app-deps",
    "dev": "concurrently -k \"npm start\" \"npm run electron\"",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "appId": "com.electron.diagrammable",
    "productName": "Diagrammable",
    "linux": {
      "category": "Utility",
      "target": "AppImage"
    },
    "appImage": {
      "artifactName": "${name}-${version}.${ext}"
    },
    "win": {
      "target": [
        "msi"
      ]
    },
    "msi": {
      "oneClick": "true",
      "perMachine": "false",
      "artifactName": "${name}-${version}.${ext}"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "@mui/icons-material": "^5.0.4",
    "@mui/material": "^5.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@trendmicro/react-sidenav": "^0.5.0",
    "codemirror": "^5.58.2",
    "electron-is-dev": "1.2.0",
    "framer-motion": "^2.9.4",
    "js-base64": "^3.7.2",
    "mermaid": "^8.13.10",
    "moment": "^2.29.1",
    "react": "17.0.2",
    "react-codemirror2-react-17": "1.0.0",
    "react-dom": "17.0.2",
    "react-router-dom": "^5.2.0",
    "react-swipeable-views": "^0.14.0",
    "styled-components": "^5.2.0",
  },
  "devDependencies": {
    "@primer/octicons-react": "^19.1.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^5.2.0",
    "electron": "9.1.1",
    "electron-builder": "^22.14.5",
    "vite": "^4.3.9",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-svgr": "^3.2.0",
    "wait-on": "5.1.0"
  }
}
